<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="employee_form_view" model="ir.ui.view">
            <field name="name">my.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <field name='coach_id' position="after">
                    <field name="datepartin"/>
                </field>

                <xpath expr="//page[3]" position="after">
                    <page string="Thông Tin Thêm">

                            <field name="classeducate">
                                <tree>
                                    <field name="Classname"/>
                                    <field name="startday"/>
                                    <field name="endday"/>
                                    <field name="mentor"/>
                                    <field name="Address"/>
                                </tree>
                                <form>
                                     <field name="Classname"/>
                                    <field name="startday"/>
                                    <field name="endday"/>
                                    <field name="mentor"/>
                                    <field name="Address"/>
                                </form>
                            </field>
                            <field name="extracurricular"/>

                    </page>
                </xpath>
            </field>
        </record>


        <record id="employee_tree_view" model="ir.ui.view">
            <field name="name">employee_tree_view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="nameemp"/>
                </field>
                <field name="parent_id" position="after">
                    <field name="image_1920"/>
                </field>

            </field>
        </record>



        <record id="mylib_employee_act" model="ir.actions.act_window">
            <field name="name">Nhân Viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    nv
                </p>
            </field>
        </record>


    </data>
</odoo>
