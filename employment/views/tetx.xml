<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="classlist_act" model="ir.actions.act_window">
            <field name="name">Danh Sách Khóa Học</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">classlist.educate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Danh sách lớp
                </p>
            </field>
        </record>

<record id="class_form_view" model="ir.ui.view">
            <field name="name">Danh Sách Khóa Học</field>
            <field name="model">classlist.educate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                       <div class="oe_title">
                           <h1>
                               <field name="name" readonly ="1"/>
                           </h1>
                        </div>
                           <group>
                               <group>
                                   <field name ="nameclass"/>

                                   <field name ="startday"/>

                                   <field name ="endday"/>

                                   <field name= "mentor"/>

                               </group>

                               <group>
                                    <field name= "capacity"/>

                                    <field name= "nbofweek"/>

                                   <field name= "time"/>

                                </group>
                           <label for="content" string="Noi dung" class="oe_edit_only"/>
                           <field name="content"/>
                           <br>
                           </br>
                               <field name= "note"/>
                           </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="classlist_tree_view" model="ir.ui.view">
            <field name="name">Danh Sách Khóa Học</field>
            <field name="model">classlist.educate</field>
            <field name="arch" type="xml">
                <tree string="Class" default_order="create_date desc">
                    <field name="name"/>
                    <field name="nameclass"/>
                    <field name="startday"/>
                    <field name="endday"/>
                    <field name="mentor"/>
                    <field name="content"/>
                    <field name="capacity"/>
                    <field name="nbofweek"/>
                    <field name="time"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>